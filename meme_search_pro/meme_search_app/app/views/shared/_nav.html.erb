<%# Navigation with Glassmorphism %>
<nav class="bg-gray-300/80 dark:bg-slate-700/80 backdrop-blur-xl border-b border-white/20 dark:border-white/10 shadow-lg fixed top-0 left-0 right-0 z-50" id="navbar">
  <div class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <%= link_to 'MemeSearch', root_path, class: "text-2xl font-bold text-slate-800 dark:text-white" %>

      <ul class="flex space-x-8" id="navigation">
        <li>
          <%= link_to 'All memes', root_path,
            id: "all_memes",
            class: current_page?(root_path) ?
              "text-black bg-fuchsia-300 px-3 py-2 rounded-xl transition" :
              "text-slate-800 dark:text-white hover:text-fuchsia-600 dark:hover:text-fuchsia-400 transition px-3 py-2 rounded-lg hover:bg-white/30" %>
        </li>
        <li>
          <%= link_to 'Search memes', search_image_cores_path,
            id: "search_memes",
            class: current_page?(search_image_cores_path) ?
              "text-black bg-fuchsia-300 px-3 py-2 rounded-xl transition" :
              "text-slate-800 dark:text-white hover:text-fuchsia-600 dark:hover:text-fuchsia-400 transition px-3 py-2 rounded-lg hover:bg-white/30" %>
        </li>
        <li
          data-controller="dropdown"
          data-action="click@window->dropdown#hide touchstart@window->dropdown#hide keydown.up->dropdown#previousItem keydown.down->dropdown#nextItem keydown.esc->dropdown#hide"
          class="inline-block relative"
          id="settings">
          <button data-action="dropdown#toggle:stop"
            class="text-slate-800 dark:text-white hover:text-fuchsia-600 dark:hover:text-fuchsia-400 transition px-3 py-2 rounded-lg hover:bg-white/30">
            Settings
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="inline-block fill-current h-4 w-4">
              <path d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"></path>
            </svg>
          </button>
          <div data-dropdown-target="menu" class="hidden absolute top-4 right-0 z-10 mt-5 flex w-screen max-w-max">
            <div class="text-sm bg-white/95 dark:bg-slate-800/95 backdrop-blur-lg shadow-2xl rounded-xl border border-white/20 dark:border-white/10 overflow-hidden w-40">
              <a data-dropdown-target="menuItem"
                href="<%= settings_image_paths_path %>"
                class="no-underline block px-4 py-3 text-gray-900 dark:text-gray-100 bg-white dark:bg-slate-800 hover:bg-gray-100 dark:hover:bg-slate-700 whitespace-nowrap focus:bg-gray-100 dark:focus:bg-slate-700 hover:text-fuchsia-600 dark:hover:text-fuchsia-400 transition"
                id="dropdown_paths">Paths</a>
              <a data-dropdown-target="menuItem"
                href="<%= settings_tag_names_path %>"
                class="no-underline block px-4 py-3 text-gray-900 dark:text-gray-100 bg-white dark:bg-slate-800 hover:bg-gray-100 dark:hover:bg-slate-700 whitespace-nowrap focus:bg-gray-100 dark:focus:bg-slate-700 hover:text-fuchsia-600 dark:hover:text-fuchsia-400 transition"
                id="dropdown_tags">Tags</a>
              <a data-dropdown-target="menuItem"
                href="<%= settings_image_to_texts_path %>"
                class="no-underline block px-4 py-3 text-gray-900 dark:text-gray-100 bg-white dark:bg-slate-800 hover:bg-gray-100 dark:hover:bg-slate-700 whitespace-nowrap focus:bg-gray-100 dark:focus:bg-slate-700 hover:text-fuchsia-600 dark:hover:text-fuchsia-400 transition"
                id="dropdown_models">Models</a>
            </div>
          </div>
        </li>
      </ul>
    </div>
  </div>
</nav>