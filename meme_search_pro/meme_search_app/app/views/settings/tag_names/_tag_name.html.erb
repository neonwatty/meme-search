<div id="<%= dom_id tag_name %>" class="flex flex-col space-y-3">
  <!-- Tag Preview Badge -->
  <div class="flex items-center justify-center">
    <span class="inline-flex items-center px-6 py-3 rounded-full text-lg font-medium shadow-md transition-all"
          style="background-color: <%= tag_name.color %>33; color: <%= tag_name.color %>; border: 2px solid <%= tag_name.color %>;">
      <span class="w-3 h-3 rounded-full mr-3" style="background-color: <%= tag_name.color %>;"></span>
      <%= tag_name.name %>
    </span>
  </div>

  <!-- Tag Details -->
  <div class="text-center">
    <p class="text-xs text-gray-500 dark:text-gray-400 font-mono">
      Color: <%= tag_name.color %>
    </p>
  </div>
</div>
