<div
  data-controller="bulk-progress"
  data-bulk-progress-session-active-value="<%= session[:bulk_operation].present? %>"
  class="fixed bottom-8 right-8 w-96 bg-white/90 dark:bg-slate-800/90 backdrop-blur-xl rounded-2xl shadow-2xl border border-white/20 dark:border-white/10 z-50 transition-all duration-300"
  data-bulk-progress-target="overlay"
  style="<%= 'display: none;' unless session[:bulk_operation].present? %>">

  <!-- Header -->
  <div class="flex items-center justify-between p-4 border-b border-gray-200/50 dark:border-gray-700/50">
    <div class="flex items-center gap-2">
      <div class="w-3 h-3 rounded-full bg-emerald-500 animate-pulse"></div>
      <h3 class="text-lg font-bold text-gray-800 dark:text-white">
        Bulk Generation
      </h3>
    </div>
    <div class="flex items-center gap-2">
      <!-- Minimize Button -->
      <button
        data-action="click->bulk-progress#toggleMinimize"
        class="p-2 hover:bg-gray-200 dark:hover:bg-gray-700 rounded-lg transition-colors"
        title="Minimize">
        <svg class="w-5 h-5 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>
      <!-- Close Button -->
      <button
        data-action="click->bulk-progress#close"
        class="p-2 hover:bg-gray-200 dark:hover:bg-gray-700 rounded-lg transition-colors"
        title="Close">
        <svg class="w-5 h-5 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Content (collapsible) -->
  <div data-bulk-progress-target="content">
    <!-- Model Info -->
    <div class="px-4 pt-4 pb-2">
      <div class="flex items-center gap-2 text-sm text-gray-600 dark:text-gray-400">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
        </svg>
        <span>Model: <span data-bulk-progress-target="modelName" class="font-semibold"><%= ImageToText.find_by(current: true)&.name || 'Unknown' %></span></span>
      </div>
    </div>

    <!-- Progress Bar -->
    <div class="px-4 py-3">
      <div class="flex items-center justify-between mb-2">
        <span class="text-sm font-semibold text-gray-700 dark:text-gray-300">Progress</span>
        <span class="text-sm font-bold text-emerald-600 dark:text-emerald-400" data-bulk-progress-target="percentage">0%</span>
      </div>
      <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-3 overflow-hidden">
        <div
          data-bulk-progress-target="progressBar"
          class="h-full bg-gradient-to-r from-emerald-500 to-teal-600 transition-all duration-500 rounded-full"
          style="width: 0%">
        </div>
      </div>
    </div>

    <!-- Status Counts -->
    <div class="px-4 py-3 space-y-2">
      <div class="grid grid-cols-2 gap-3">
        <!-- Done -->
        <div class="flex items-center gap-2 text-sm">
          <div class="w-2 h-2 rounded-full bg-green-500"></div>
          <span class="text-gray-600 dark:text-gray-400">Done:</span>
          <span class="font-bold text-green-600 dark:text-green-400" data-bulk-progress-target="doneCount">0</span>
        </div>
        <!-- Processing -->
        <div class="flex items-center gap-2 text-sm">
          <div class="w-2 h-2 rounded-full bg-blue-500 animate-pulse"></div>
          <span class="text-gray-600 dark:text-gray-400">Processing:</span>
          <span class="font-bold text-blue-600 dark:text-blue-400" data-bulk-progress-target="processingCount">0</span>
        </div>
        <!-- In Queue -->
        <div class="flex items-center gap-2 text-sm">
          <div class="w-2 h-2 rounded-full bg-yellow-500"></div>
          <span class="text-gray-600 dark:text-gray-400">In Queue:</span>
          <span class="font-bold text-yellow-600 dark:text-yellow-400" data-bulk-progress-target="queueCount">0</span>
        </div>
        <!-- Failed -->
        <div class="flex items-center gap-2 text-sm">
          <div class="w-2 h-2 rounded-full bg-red-500"></div>
          <span class="text-gray-600 dark:text-gray-400">Failed:</span>
          <span class="font-bold text-red-600 dark:text-red-400" data-bulk-progress-target="failedCount">0</span>
        </div>
      </div>
    </div>

    <!-- Total Count -->
    <div class="px-4 py-2 border-t border-gray-200/50 dark:border-gray-700/50">
      <div class="flex items-center justify-between text-sm">
        <span class="text-gray-600 dark:text-gray-400">Total Images:</span>
        <span class="font-bold text-gray-800 dark:text-white" data-bulk-progress-target="totalCount">0</span>
      </div>
    </div>

    <!-- Error Message (hidden by default) -->
    <div
      data-bulk-progress-target="errorMessage"
      class="hidden mx-4 mb-3 p-3 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-700 rounded-xl">
      <div class="flex items-start gap-2">
        <svg class="w-5 h-5 text-red-600 dark:text-red-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div class="flex-1">
          <p class="text-sm font-semibold text-red-800 dark:text-red-300">Connection Error</p>
          <p class="text-xs text-red-600 dark:text-red-400 mt-1">Unable to fetch status updates. Retrying...</p>
        </div>
      </div>
    </div>

    <!-- Success Message (hidden by default) -->
    <div
      data-bulk-progress-target="successMessage"
      class="hidden mx-4 mb-3 p-3 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-700 rounded-xl">
      <div class="flex items-start gap-2">
        <svg class="w-5 h-5 text-green-600 dark:text-green-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div class="flex-1">
          <p class="text-sm font-semibold text-green-800 dark:text-green-300">Complete!</p>
          <p class="text-xs text-green-600 dark:text-green-400 mt-1">All descriptions have been generated.</p>
        </div>
      </div>
    </div>

    <!-- Cancel Button -->
    <div class="px-4 pb-4">
      <button
        data-action="click->bulk-progress#cancel"
        data-bulk-progress-target="cancelButton"
        class="w-full px-4 py-2 text-red-700 dark:text-red-300 font-semibold bg-red-50 dark:bg-red-900/20 hover:bg-red-100 dark:hover:bg-red-900/30 border border-red-200 dark:border-red-700 rounded-xl shadow-sm hover:shadow-md transition-all">
        Cancel Operation
      </button>
    </div>
  </div>

  <!-- Minimized State Indicator -->
  <div data-bulk-progress-target="minimizedIndicator" class="hidden px-4 py-3">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-2">
        <div class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"></div>
        <span class="text-sm font-semibold text-gray-700 dark:text-gray-300">Processing...</span>
      </div>
      <span class="text-sm font-bold text-emerald-600 dark:text-emerald-400" data-bulk-progress-target="minimizedPercentage">0%</span>
    </div>
  </div>
</div>
