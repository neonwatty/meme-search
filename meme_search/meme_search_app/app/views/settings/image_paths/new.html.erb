<%= render 'settings/shared/tabs' %>

<div class="flex flex-col items-center justify-center px-4 py-8">
  <!-- Page Header -->
  <div class="text-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800 dark:text-white">Add Directory Path</h1>
    <p class="text-gray-600 dark:text-gray-400 mt-2">Configure a new meme source directory</p>
  </div>

  <!-- Glassmorphic Card Wrapper -->
  <div class="bg-white/90 dark:bg-slate-800/90 backdrop-blur-xl border border-white/20 dark:border-white/10 rounded-3xl p-8 shadow-2xl max-w-2xl w-full">
    <%= render "form", image_path: @image_path %>
  </div>

  <!-- Action Buttons -->
  <div class="mt-6">
    <%= link_to "Back to directory paths", [:settings, :image_paths], class: back_button_classes %>
  </div>
</div>
