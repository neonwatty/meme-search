<div id="<%= dom_id image_path %>" class="flex flex-col space-y-3">
  <!-- Path Display -->
  <div class="flex items-center justify-center">
    <div class="bg-gray-100/80 dark:bg-slate-700/80 backdrop-blur-lg border border-gray-300/50 dark:border-gray-600/50 rounded-xl px-4 py-3 shadow-md">
      <code class="text-sm font-mono text-gray-800 dark:text-gray-200">
        /public/memes/<%= image_path.name %>
      </code>
    </div>
  </div>

  <!-- Scan Status Display -->
  <div class="text-center">
    <% if !image_path.auto_scan_enabled? %>
      <!-- Manual only -->
      <div class="inline-flex items-center space-x-2 bg-gray-100/80 dark:bg-slate-700/80 backdrop-blur-lg border border-gray-300/50 dark:border-gray-600/50 rounded-lg px-3 py-2">
        <svg class="w-4 h-4 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span class="text-xs text-gray-700 dark:text-gray-300">Auto-scan: Manual only</span>
      </div>
    <% elsif image_path.scanning? %>
      <!-- Currently scanning -->
      <div class="inline-flex items-center space-x-2 bg-blue-50/80 dark:bg-blue-900/20 backdrop-blur-lg border border-blue-200/50 dark:border-blue-700/50 rounded-lg px-3 py-2">
        <svg class="w-4 h-4 text-blue-600 dark:text-blue-400 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
        </svg>
        <div class="flex flex-col items-start">
          <span class="text-xs font-semibold text-blue-700 dark:text-blue-300">Scanning...</span>
          <% if image_path.last_scanned_at %>
            <span class="text-xs text-blue-600 dark:text-blue-400">Last: <%= time_ago_in_words(image_path.last_scanned_at) %> ago</span>
          <% end %>
        </div>
      </div>
    <% elsif image_path.failed? %>
      <!-- Failed scan -->
      <div class="inline-flex items-center space-x-2 bg-red-50/80 dark:bg-red-900/20 backdrop-blur-lg border border-red-200/50 dark:border-red-700/50 rounded-lg px-3 py-2">
        <svg class="w-4 h-4 text-red-600 dark:text-red-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
        <div class="flex flex-col items-start">
          <span class="text-xs font-semibold text-red-700 dark:text-red-300">Scan failed</span>
          <span class="text-xs font-mono text-red-600 dark:text-red-400"><%= image_path.last_scan_error %></span>
          <% if image_path.last_scanned_at %>
            <span class="text-xs text-red-600 dark:text-red-400">Last attempted: <%= time_ago_in_words(image_path.last_scanned_at) %> ago</span>
          <% end %>
        </div>
      </div>
    <% elsif image_path.last_scanned_at.nil? %>
      <!-- First scan pending -->
      <div class="inline-flex items-center space-x-2 bg-purple-50/80 dark:bg-purple-900/20 backdrop-blur-lg border border-purple-200/50 dark:border-purple-700/50 rounded-lg px-3 py-2">
        <svg class="w-4 h-4 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
        <div class="flex flex-col items-start">
          <span class="text-xs font-semibold text-purple-700 dark:text-purple-300">Scans <%= ImagePath::SCAN_FREQUENCIES[image_path.scan_frequency_minutes]&.downcase %></span>
          <span class="text-xs font-semibold text-purple-600 dark:text-purple-400">First scan pending</span>
          <span class="text-xs text-purple-600 dark:text-purple-400">Never scanned</span>
        </div>
      </div>
    <% elsif image_path.due_for_scan? %>
      <!-- Due now -->
      <div class="inline-flex items-center space-x-2 bg-amber-50/80 dark:bg-amber-900/20 backdrop-blur-lg border border-amber-200/50 dark:border-amber-700/50 rounded-lg px-3 py-2">
        <svg class="w-4 h-4 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div class="flex flex-col items-start">
          <span class="text-xs font-semibold text-amber-700 dark:text-amber-300">Scans <%= ImagePath::SCAN_FREQUENCIES[image_path.scan_frequency_minutes]&.downcase %></span>
          <span class="text-xs font-semibold text-amber-600 dark:text-amber-400">Due for scan now</span>
          <span class="text-xs text-amber-600 dark:text-amber-400">Last: <%= time_ago_in_words(image_path.last_scanned_at) %> ago</span>
        </div>
      </div>
    <% else %>
      <!-- Up to date -->
      <div class="inline-flex items-center space-x-2 bg-emerald-50/80 dark:bg-emerald-900/20 backdrop-blur-lg border border-emerald-200/50 dark:border-emerald-700/50 rounded-lg px-3 py-2">
        <svg class="w-4 h-4 text-emerald-600 dark:text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
        </svg>
        <div class="flex flex-col items-start">
          <span class="text-xs font-semibold text-emerald-700 dark:text-emerald-300">Scans <%= ImagePath::SCAN_FREQUENCIES[image_path.scan_frequency_minutes]&.downcase %></span>
          <span class="text-xs text-emerald-600 dark:text-emerald-400">Next scan in <%= image_path.time_until_next_scan %></span>
          <span class="text-xs text-emerald-600 dark:text-emerald-400">Last: <%= time_ago_in_words(image_path.last_scanned_at) %> ago</span>
        </div>
      </div>
    <% end %>
  </div>
</div>
